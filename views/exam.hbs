<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0"/>

    <title>{{title}}</title>

    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" >
    <link href="/stylesheets/index.css" rel="stylesheet">
</head>
<body>
    <section>
      <h1>{{exam_name}}</h1>
    </section>
    <!--试题详情-->
    <section>
      <ol>
        {{#each question}}
        {{#if question_selection}}
        <li class="eachdescription">{{question_detail}}</br>
          {{#each selection}}
          <input type="radio"/><label  class="eachselection">{{selection}}</label><br/>
          {{#each}}
        </li>
        {{#elseif question_judgeanswer}}
        <li class="eachdescription">{{question_detail}}
          <select>
              <option value="true">true</option>
              <option value="false">false</option>
          </select>
        </li>
        {{#else}}
        <li class="eachdescription">{{question_detail}}</br>
          <textarea rows="3" cols='30' overflow-y='scroll'></textarea>
        </li>
        {{/if}}
        {{#each}}
      </ol>
    </section>

    <script src="https://cdn.bootcss.com/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
    <script>window.jQuery || document.write('<script src="js/jquery-1.11.0.min.js"><\/script>')</script>
    <script src='/bootstrap/js/bootstrap.min.js'></script>
    <script src='/javascripts/index.js'></script>
</body>
</html>
